@model CalculadoraOperaciones.Models.Productos
@{
    ViewData["Title"] = "Calculadora";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
<div class="col-md-4">
<form asp-action="Productos">
    <div class="form-group">
        <input asp-for="nombre" class="form-control" />
        <input asp-for="peso" class="form-control" />
        
        <div class="form-group">
        <select asp-for="unidad" class="form-control">
            <option value="KG">KG</option>
            <option value="Gramos">Gramos</option>
        </select>
         </div>

        <input asp-for="precio" class="form-control" />

    </div>
    <div class="form-group">
        <input type="submit" value="Productos" class="btn btn-primary" />
    </div>
</form>
</div>
</div>
<h3>@ViewData["Message"]</h3>